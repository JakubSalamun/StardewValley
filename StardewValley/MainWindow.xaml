<Window x:Class="StardewValley.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StardewValley"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/Room.png" />
    </Window.Background>
    <Grid>
        <Button x:Name="Calendar" Click="Calendar_Click" Margin="455,57,260,424" BorderBrush="DarkGreen" BorderThickness="4">
            <Image Source="/images/Calendar_icon.png" />
           
        </Button>
        <Button x:Name="TV" Click="TV_Click" Margin="55,133,585,255" BorderBrush="DarkGreen" BorderThickness="4">
            <Image Source="/images/TV_icon.png" />
        </Button>
        <Button x:Name="Bed" Click="Bed_Click"  Margin="587,264,54,69"  BorderBrush="DarkGreen" BorderThickness="4">
           <Image Source="/images/Bed.png" />


        </Button>

    </Grid>
</Window>
